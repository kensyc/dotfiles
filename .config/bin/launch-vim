#!/bin/sh

#
# Could potentially do this with autocmd
# :autocmd BufWinEnter * kitty @ set-colors background=$LIGHT_BORDER
# :autocmd BufWinLeave * kitty @ set-colors background=$DARK_BORDER
# 

source "$COLORSCHEMES/current/colors-nvim-borders"

kitty @ set-colors background=$LIGHT_BORDER

nvim $1

kitty @ set-colors background=$DARK_BORDER
