#!/usr/bin/env bash

set -e

cp /etc/pacman.d/mirrorlist /etc/pacman.d/mirrorlist.backup

curl -s "https://www.archlinux.org/mirrorlist/?country=FR&country=GB&country=BE&country=NL&country=DE&protocol=https&use_mirror_status=on" | sed -e 's/^#Server/Server/' -e '/^#/d' | rankmirrors -vn 5 - > tmpfile

cp tmpfile /etc/pacman.d/mirrorlist

rm tmpfile
