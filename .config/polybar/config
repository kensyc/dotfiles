include-file = $COLORSCHEMES/current/colors-polybar

[bar/main]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
radius = 0.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}
foreground-inactive = ${colors.foreground-inactive}

padding = 0
padding-right = 2

module-margin-left = 2
module-margin-right = 2

#font-0 = "Operator Mono:style=Book:pixelsize=9;2"
font-0 = "JetBrains Mono:style=Regular:pixelsize=9;2"
font-1 = "Font Awesome 6 Brands,Font Awesome 6 Brands Regular:style=Regular:pixelsize=8;2"
font-2 = "Font Awesome 6 Free,Font Awesome 6 Free Solid:style=Solid:pixelsize=8;2"
font-3 = "Font Awesome 6 Free,Font Awesome 6 Free Regular:style=Regular:pixelsize=8;2"

modules-left = bspwm
modules-right = arrow microphone pulseaudio date powermenu

wm-restack = bspwm
wm-name = polybar-main

override-redirect = false

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = ns-resize

type = internal/xwindow
label = %title:0:30:...%

[bar/tray]
monitor-strict = false
override-redirect = true
enable-ipc = true

wm-name = polybar-tray

width = 20
height = 27
offset-x = 98%
offset-y = 37

modules-right = placeholder

tray-position = right
tray-detached = false
tray-padding = 10
tray-maxsize = 16
tray-scale = 1

background = ${colors.background}
foreground = ${colors.foreground}

padding = 0

[module/placeholder]
type = custom/script

[module/arrow]
type = custom/script
exec = echo 

click-left = bash $HOME/.config/polybar/toggle-tray.sh

[module/bspwm]
type = internal/bspwm

ws-icon-0 = "1;"
ws-icon-1 = "2;"
ws-icon-2 = "3;"
ws-icon-3 = "4;"
ws-icon-4 = "5;"
ws-icon-5 = "6;"

format = <label-state> <label-mode>

label-focused = ""
label-focused-background = ${colors.background-alt}
label-focused-foreground = ${colors.foreground-alt}
label-focused-padding = 2

label-occupied = ""
label-occupied-font = 2
label-occupied-background = ${colors.background}
label-occupied-foreground = ${colors.foreground}
label-occupied-padding = 2

label-urgent = %icon%!
label-urgent-background = ${colors.background}
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 2

label-empty = %icon%
label-empty-background = ${colors.background}
label-empty-foreground = ${colors.foreground}
label-empty-padding = 2

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

use-ui-max = false

format-volume = <ramp-volume> <label-volume>

label-volume = %percentage%%

label-muted = 
label-muted-foreground = ${colors.foreground-inactive}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

click-right = pavucontrol &

[module/microphone]
type = custom/script

exec = ~/.config/polybar/scripts/pulseaudio-microphone.sh
tail = true

click-left = ~/.config/polybar/scripts/pulseaudio-microphone.sh --toggle &
click-right = pavucontrol &

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
label-open-foreground = ${colors.foreground}
label-close =  cancel
label-close-foreground = ${colors.foreground}
label-separator = " "

menu-0-0 = reboot
menu-0-0-exec = reboot
menu-0-1 = power off
menu-0-1-exec = poweroff

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

